rules_version = '2';

service cloud.firestore {
    match /databases/{database}/documents {
        match /users/{user} {
            function isAccessGranted(request) {
                let passwordData = get(/databases/$(database)/documents/passwords/join).data;
                return isDialogAccessGranted(request, passwordData) ||
                        isCoachAccessGranted(request, passwordData) ||
                        isAdminAccessGranted(request, passwordData);
            }
            function isDialogAccessGranted(request, passwordData) {
                return request.resource.data["access"] == passwordData["dialog"];
            }
            function isCoachAccessGranted(request, passwordData) {
                return request.resource.data["access"] == passwordData["coach"];
            }
            function isAdminAccessGranted(request, passwordData) {
                return request.resource.data["access"] == passwordData["admin"];
            }
            allow write: if request.auth.uid == request.resource.id && isAccessGranted(request);
            allow read: if resource == null || request.auth.uid == resource.id;
        }

        match /{document=**} {
            allow read, write: if false;
        }
    }
}